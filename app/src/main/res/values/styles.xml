<resources>

        <!-- Components -->
    <style name="SpectrumTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Appbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
    </style>

    <!-- Toolbar menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Contextual action bar -->
    <style name="SpectrumContextualAppBar" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- TextInputLayout -->
    <style name="SpectrumTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/spectrumSecondaryColor</item>
        <item name="hintTextAppearance">@style/SpectrumBody2</item>
        <item name="boxStrokeColor">@color/spectrumSecondaryColor</item>
    </style>

    <!-- Button -->
    <style name="SpectrumButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/spectrumSecondaryColor</item>
        <item name="strokeColor">@color/spectrumSecondaryColor</item>
        <item name="strokeWidth">0.8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>

    <!-- Circle Progress indicator -->
    <style name="SpectrumCircleProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/spectrumSecondaryColor</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="TitleText.Normal">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:colorControlNormal">@color/grey</item>
    </style>

    <style name="VoteCountText">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="ContextText">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawablePadding">@dimen/size_4</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
